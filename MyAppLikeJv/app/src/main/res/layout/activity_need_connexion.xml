<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dominique.fr.myapplikejv.NeedConnexionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_info_connexion_obligatoire"
        style="@style/label_bleu"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_info_que_faire_apres_connexion"/>
    <Button
        android:id="@+id/btn_retour_splash_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/bouton_bleu"
        android:text="Redemarrer l'application"
        />

    <Button
        android:id="@+id/btn_quitter_application"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/bouton_bleu"
        android:text="Quitter l'application"
        />

</LinearLayout>
