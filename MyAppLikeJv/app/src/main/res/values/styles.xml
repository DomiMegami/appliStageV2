        <item name="android:textSize">25sp</item>
    </style>


    <style name="txt_dans_imgBtn">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bleu_a</item>
        <item name="android:layout_gravity">bottom|center_vertical</item>
        <item name="android:textAlignment">center</item>

    </style>
    <style name="txt_dans_imgBtn_xl">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/bleu_a</item>
        <item name="android:layout_gravity">bottom|center_vertical</item>
        <item name="android:textAlignment">center</item>

    </style>

    <!-- layout -->
    <style name="linearLayout_imgBtn">
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">@color/noir</item>

    </style>
    <!-- boutons cgu -->
    <style name="btn_fond_blanc_txt_bleu_cgu">
        <item name="android:background">@color/bkg_btn_unselect</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">10dp</item>
    </style>



</resources>
