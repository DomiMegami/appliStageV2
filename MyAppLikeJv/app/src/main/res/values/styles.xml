<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/noir</item>
    </style>

    <style name="AppTheme.CustomTheme">
        <item name = "android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/bkg_noir_transp</item>
        <item name="android:textColor">@color/txt_sur_fond_clair</item>
    </style>


    <!--boutons -->

    <style name="bouton_rouge_orange">
        <item name="android:background">@color/orange_a</item>
        <item name="android:textColor">@color/txt_sur_fond_sombre</item>
        <item name="android:textSize">14sp</item>
        <item name="android:radius">10dp</item>
        <item name="android:layout_margin">10dp</item>

    </style>

    <style name="bouton_bleu">
        <item name="android:background">@color/bleu_a</item>
        <item name="android:textColor">@color/txt_sur_fond_sombre</item>
        <item name="android:textSize">14sp</item>
        <item name="android:radius">10dp</item>
        <item name="android:layout_margin">10dp</item>

    </style>

    <style name="btn_fond_blanc_txt_bleu">
        <item name="android:background">@color/blanc</item>
        <item name="android:textColor">@color/bleu_a</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="btn_fond_blanc_txt_bleu_xl">
        <item name="android:background">@color/blanc</item>
        <item name="android:textColor">@color/bleu_a</item>
        <item name="android:textSize">22sp</item>

    </style>
    <style name="btn_fond_blanc_txt_noir">
        <item name="android:background">@color/bkg_btn_unselect</item>
        <item name="android:textColor">@color/noir</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="btn_fond_blanc_txt_noir_xl">
        <item name="android:background">@color/bkg_btn_unselect</item>
        <item name="android:textColor">@color/noir</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="btn_fond_blanc_txt_orange">
        <item name="android:background">@color/bkg_btn_unselect</item>
        <item name="android:textColor">@color/orange_a</item>
    </style>


    <style name="imgBtn_fond_blanc">
        <item name="android:background">@color/bkg_btn_unselect</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="imgBtn_fond_blanc_xl">
        <item name="android:background">@color/bkg_btn_unselect</item>
        <item name="android:padding">20dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- textes -->

    <style name="txt_sur_img">
        <item name="android:textColor">@color/blanc</item>
        <item name="android:background">@color/noir</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>

    </style>

    <style name="txt_sur_img_xl">
        <item name="android:textColor">@color/blanc</item>
        <item name="android:background">@color/noir</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginBottom">15dp</item>

    </style>



    <style name="Titre_page_rouge_orange">
        <item name="android:textColor">@color/orange_a</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginTop">15dp</item>
