    </style>

    <style name="label">
        <item name="android:textColor">@color/orange_a</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="label_xl">
        <item name="android:textColor">@color/orange_a</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="label_bleu">
        <item name="android:textColor">@color/bleu_a</item>
